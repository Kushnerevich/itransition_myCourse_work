</head>
<body>
<ul id="menu">
    <li id ="mainPage"><a href="{{ path('admin') }}">Main Page</a></li>
    <li id = "userPage"><a href="{{ path('admin/useredit') }}">User controller</a></li>
    <li id ="questionPage"><a href="{{ path('admin/questionedit') }}">Question controller</a></li>
    <li id ="quizPage"><a href="{{ path('admin/quizedit') }}">Quiz controller</a></li>
</ul>
</body>
<div>
    <table class="questionTable">
        <thead>
        <tr>
            <th class="RedWord">Question</th>
            <th>1st variant</th>
            <th>2st variant</th>
            <th>3st variant</th>
            <th>4st variant</th>
        </tr>
        </thead>

        <tbody>
        <tr>
            <td><input type="text" placeholder="Question" required name="QuestionName"></td>
            <td><input type="text" placeholder="Answer" required name="1stAnswer" ></td>
            <td><input type="text" placeholder="Answer" required name="2stAnswer" ></td>
            <td><input type="text" placeholder="Answer" required name="3stAnswer" ></td>
            <td><input type="text" placeholder="Answer" required name="4stAnswer"></td>
            <td><button id="Add" type="submit">Add question</button></td>
        </tr>
        </tbody>

        {% for question in questions %}
        <tbody class="quetions">
            <tr>
                <td>{{ question.name_of_question }}</td>
                {% for answer in answers %}
                    {% if answer.Question_id.id==question.id %}
                        <td>{{ answer.name_of_answer }}{{ answer.right }}</td>
                    {%endif%}
                {% endfor %}
                <td><button data-index={{ question.id }} type="button">Delete</button></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</html>